<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Style pour les alertDialog-->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:buttonBarButtonStyle">@style/MyDialogButton</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@color/lightBlue</item>
    </style>

    <style name="MyDialogButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/lightBlue</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="android:windowIsFloating">false</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="android:state_expanded">true</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ChipSelectionStyle">
        <item name="chipStrokeWidth">2dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/uikit_gray_60</item>
        <item name="selectableItemBackground">@color/uikit_blue90</item>
        <item name="chipBackgroundColor">@color/chip_filter_selection_color</item>
    </style>


</resources>