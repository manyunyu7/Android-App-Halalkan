<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="@dimen/dimen_4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tab_menu_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:fontFamily="@font/poppins_medium"
        android:scrollHorizontally="false"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:text="Pesan Makanan"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bg_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_menu_name"
        app:tint="@color/color_separator" />

    <ImageView
        android:id="@+id/active_indicator"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        app:layout_constraintStart_toStartOf="@id/tab_menu_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bg_rectangle"
        app:layout_constraintEnd_toEndOf="@id/tab_menu_name"
        app:layout_constraintTop_toBottomOf="@id/tab_menu_name"
        app:tint="@color/halalkan_primary" />





</androidx.constraintlayout.widget.ConstraintLayout>